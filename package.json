{
  "name": "igata",
  "version": "0.1.0",
  "private": false,
  "description": "igata is my boilerplate for Web Frontend",
  "repository": "git@github.com:diescake/igata.git",
  "author": "diescake",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "format": "prettier --write './**/*.{md,js,jsx,ts,tsx,json,yml,yaml,css,sass,scss,html}'",
    "lint": "tslint --format verbose --fix --project tsconfig.json './src/**/*.{js,jsx,ts,tsx}'",
    "style": "stylelint --fix './src/**/*.{scss}'",
    "test": "echo 'not implemented'",
    "deploy": "echo 'Not necessary for Netlify'",
    "license": "license-checker --production --summary"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn test",
      "git add"
    ],
    "*.{scss}": [
      "yarn style",
      "git add"
    ],
    "*.{md,json,yml,yaml,css,sass,scss,html}": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/history": "^4.7.2",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "7.0.9",
    "@types/react-router": "^5.0.1",
    "@types/react-router-dom": "^4.3.3",
    "@types/redux-actions": "^2.6.0",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-saga": "^0.10.5",
    "@types/webpack": "^4.4.32",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "dotenv-webpack": "^1.7.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "json-loader": "^0.5.7",
    "license-checker": "^25.0.1",
    "lint-staged": "^8.1.7",
    "node-sass": "^4.12.0",
    "prettier": "1.17.1",
    "redux-devtools": "^3.5.0",
    "redux-immutable-state-invariant": "^2.1.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.6.1",
    "ts-loader": "^6.0.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.1",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "yaml-loader": "^0.5.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "connected-react-router": "^6.4.0",
    "history": "^4.9.0",
    "moment": "^2.24.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.2",
    "weak-key": "^1.0.1"
  }
}
